
  <view class="container">
    <view class="weui-cells__title">个人头像:</view>
    <view class="weui-cells weui-cells_after-title avatar-wrapper" bindtap="chooseImg">
      <image class="avatar" src="{{info.imgArray && info.imgArray[0]}}"  wx:if="{{info.imgArray && info.imgArray[0]}}"/>
      <view class="avatar"  wx:else>上传头像</view>
    </view>
    <view class="placeholder"/>
    <view class="weui-cells__title">性别:</view>
    <view class="weui-cells weui-cells_after-title">
      <radio-group bindchange="change" data-wpychange-a="sex">
        <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="{{item.value}}">
          <radio class="weui-check" value="{{item.value}}" checked="{{item.value === info.sex}}"/>
          <view class="weui-cell__bd">{{item.name}}</view>
          <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.value === info.sex}}">
            <icon class="weui-icon-radio" type="success_no_circle" size="16"/>
          </view>
        </label>
      </radio-group>
    </view>
    <view class="placeholder"/>
    <view class="weui-cells__title">学历:</view>
    <view class="weui-cells weui-cells_after-title">
      <radio-group bindchange="change" data-wpychange-a="education">
        <label class="weui-cell weui-check__label" wx:for="{{educations}}" wx:key="{{item.value}}">
          <radio class="weui-check" value="{{item.value}}" checked="{{item.value === info.education}}"/>
          <view class="weui-cell__bd">{{item.name}}</view>
          <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.value === info.education}}">
            <icon class="weui-icon-radio" type="success_no_circle" size="16"/>
          </view>
        </label>
      </radio-group>
    </view>
    <view class="placeholder"/>
    <view class="weui-cells__title">工作时间:</view>
    <view class="weui-cells weui-cells_after-title">
      <checkbox-group bindchange="checkboxChange">
        <label class="weui-cell weui-check__label" wx:for="{{days}}" wx:key="{{item.day}}">
          <checkbox class="weui-check" value="{{item.day}}" checked="{{item.highlight}}"/>
          <view class="weui-cell__hd weui-check__hd_in-checkbox">
            <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.highlight}}"/>
            <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.highlight}}"/>
          </view>
          <view class="weui-cell__bd">{{item.day}}</view>
        </label>
      </checkbox-group>
    </view>
    <view class="placeholder"/>
    <view class="weui-cells__title">兼职类型:</view>
    <view class="weui-cells weui-cells_after-title">
      <checkbox-group bindchange="typeChange">
        <label class="weui-cell weui-check__label" wx:for="{{types}}" wx:key="{{item.name}}">
          <checkbox class="weui-check" value="{{item.name}}" checked="{{item.checked}}"/>
          <view class="weui-cell__hd weui-check__hd_in-checkbox">
            <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.checked}}"/>
            <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.checked}}"/>
          </view>
          <view class="weui-cell__bd">{{item.name}}</view>
        </label>
      </checkbox-group>
    </view>

    <view class="placeholder"/>
    <view class="weui-cells__title">其他信息:</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">姓名</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindchange="change" placeholder="请输入姓名" value="{{info.username}}" data-wpychange-a="username"/>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">出生日期</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="date" class="weui-input" value="{{info.birthday}}" start="1970-01-01" end="2017-01-01" bindchange="change" data-wpychange-a="birthday">
            <view>{{info.birthday || '请选择出生日期'}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">专业</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入专业" value="{{info.specialty}}" bindchange="change" data-wpychange-a="specialty"/>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">学校</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入学校" value="{{info.school}}" bindchange="change" data-wpychange-a="school"/>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">手机号码</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入学校" value="{{info.tel}}" bindchange="change" data-wpychange-a="tel"/>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">邮箱</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入学校" value="{{info.email}}" bindchange="change" data-wpychange-a="email"/>
        </view>
      </view>
    </view>

    <view class="placeholder"/>
    <view class="weui-cells__title">个人技能:</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input" wx:for="{{info.ability}}" wx:key="{{index}}">
        <view class="weui-cell__hd skill-hd">
          <input class="weui-input" bindchange="changeSkill" placeholder="请输入技能" value="{{item.label}}" data-wpychangeskill-a="label" data-wpychangeskill-b="{{index}}"/>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="changeSkill" class="weui-input" value="{{item.value  - 1}}" range="{{stars}}" data-wpychangeskill-a="value" data-wpychangeskill-b="{{index}}">
            <view class="star-wrapper">
              <text class="star" wx:for="{{item.value}}" wx:key="{{index}}">⭐</text>
            </view>
            <view class="star-wrapper" wx:if="{{!item.value}}">请选择</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_link">
        <view class="weui-cell__bd" bindtap="addSkill">添加更多</view>
      </view>
    </view>

    <view class="placeholder"/>
    <view class="weui-cells__title">能力评价:</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input" wx:for="{{info.currency}}" wx:key="{{index}}">
        <view class="weui-cell__hd skill-hd">
          <view class="weui-label">{{item.label}}</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="changeCurrency" class="weui-input" value="{{item.value   - 1}}" range="{{stars}}" data-wpychangecurrency-a="{{index}}">
            <view class="star-wrapper">
              <text class="star" wx:for="{{item.value}}" wx:key="{{index}}">⭐</text>
            </view>
            <view class="star-wrapper" wx:if="{{!item.value}}">请选择</view>
          </picker>
        </view>
      </view>
    </view>
    <view class="placeholder"/>
    <view class="weui-cells__title">自我评价:</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd">
          <textarea class="weui-textarea" placeholder="请输入自我评价" value="{{info.information}}" style="height: 6.6em" maxlength="200" bindinput="change" data-wpychange-a="information"/>
          <view class="weui-textarea-counter">{{info.information.length}}/200</view>
        </view>
      </view>
    </view>
    <view class="footer-wrapper">
      <button type="primary" class="primary" bindtap="save">保存简历</button>
    </view>
    
    <view class="wetoast {{$toast$reveal ? 'wetoast_show' : ''}}">
        <view class="wetoast__mask"/>
        <view class="wetoast__bd" animation="{{$toast$animationData}}">
            <block  wx:if="{{$toast$img}}">
                <view class="wetoast__bd__img {{$toast$imgClassName || ''}}">
                    <image class="wetoast__bd__img_desc" src="{{$toast$img}}" mode="{{$toast$imgMode || 'scaleToFill'}}"/>
                </view>
            </block>
            <block  wx:if="{{$toast$title}}">
                <view class="wetoast__bd__title {{$toast$titleClassName || ''}}">{{$toast$title}}</view>
            </block>
        </view>
    </view>

  </view>