
  <view class="container">
    
  <view class="container">
    <view class="logo-wrapper">
      <image src="../assets/index/banner.png"/>
    </view>
    <view class="block-wrapper">
      <text class="block big">{{$jobDetailCom$detail.title}}</text>
      <view>
        <image class="icon" src="../assets/application/company.png"/>
        <text>{{$jobDetailCom$detail.city}}</text>
        <image class="icon mr-left" src="../assets/application/education.png"/>
        <text>{{$jobDetailCom$detail.education}}</text>
        <image class="icon mr-left" src="../assets/application/person.png"/>
        <text>招{{$jobDetailCom$detail.targetdegree}}人</text>
      </view>
      <view>
        <image class="icon" src="../assets/application/time.png"/>
        <text>工作时间：{{$jobDetailCom$detail.workingTime}}</text>
        <image class="icon mr-left" src="../assets/application/time.png"/>
        <text>每周工作：{{$jobDetailCom$detail.workTimeWeek}}</text>
      </view>
      <view>
        <image class="icon" src="../assets/application/address.png"/>
        <text>工作地点：{{$jobDetailCom$detail.site}}</text>
      </view>
    </view>
    <view  wx:if="{{$jobDetailCom$showstatus}}" class="block-wrapper status-block">
      <text class="block big">审核进度</text>
      <view class="status-wrapper">
        <view class="dot green"/>
        <view class="artical {{$jobDetailCom$detail.orderstatus >= 1 ? 'green' : ''}}"/>
        <view class="dot {{$jobDetailCom$detail.orderstatus >= 1 ? 'green' : ''}}"/>
        <view class="artical {{$jobDetailCom$detail.orderstatus === 2 ? 'green' : ''}}"/>
        <view class="dot {{$jobDetailCom$detail.orderstatus === 2 ? 'green' : ''}}"/>
      </view>
      <view class="status-wrapper text-wrapper">
        <view>
          <text>审核中</text>
        </view>
        <view>
          <text>进行中</text>
        </view>
        <view>
          <text>已结束</text>
        </view>
      </view>
    </view>
    <view class="block-wrapper">
      <text class="big bq block">工作职责</text>
      <text class="block">{{$jobDetailCom$detail.responsibility}}</text>
    </view>
    <view class="block-wrapper">
      <text class="big bq block">{{$jobDetailCom$detail.companyname}}</text>
      <text class="block">{{$jobDetailCom$detail.company}}</text>
    </view>
  </view>

    
    <view class="wetoast {{$toast$reveal ? 'wetoast_show' : ''}}">
        <view class="wetoast__mask"/>
        <view class="wetoast__bd" animation="{{$toast$animationData}}">
            <block  wx:if="{{$toast$img}}">
                <view class="wetoast__bd__img {{$toast$imgClassName || ''}}">
                    <image class="wetoast__bd__img_desc" src="{{$toast$img}}" mode="{{$toast$imgMode || 'scaleToFill'}}"/>
                </view>
            </block>
            <block  wx:if="{{$toast$title}}">
                <view class="wetoast__bd__title {{$toast$titleClassName || ''}}">{{$toast$title}}</view>
            </block>
        </view>
    </view>

  </view>